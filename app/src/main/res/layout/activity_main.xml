<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aldotesting.calculatorkita.MainActivity">

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="30dp"/>


    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="1"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="2"
        android:layout_above="@+id/button10"
        android:layout_toEndOf="@+id/button1" />" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="3"
        android:layout_above="@+id/buttonC"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="4"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="5"
        android:layout_above="@+id/button2"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="6"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="7"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="8"
        android:layout_above="@+id/button5"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="9"
        android:layout_above="@+id/button6"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/buttonadd"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="+"
        android:layout_above="@+id/buttonsub"
        android:layout_alignEnd="@+id/buttonsub" />

    <Button
        android:id="@+id/buttonsub"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="-"
        android:layout_above="@+id/buttonmul"
        android:layout_alignEnd="@+id/buttonmul" />" />

    <Button
        android:id="@+id/buttonmul"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="*"
        android:layout_above="@+id/buttondiv"
        android:layout_alignEnd="@+id/buttondiv" />

    <Button
        android:id="@+id/button10"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="."
        android:layout_above="@+id/buttoneql"
        android:layout_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/button0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="0"
        android:layout_above="@+id/buttoneql"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonC"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="C"
        android:layout_above="@+id/buttoneql"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:id="@+id/buttondiv"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="/"
        android:layout_above="@+id/buttoneql"
        android:layout_toEndOf="@+id/buttonC" />

    <Button
        android:id="@+id/buttoneql"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="="
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttondiv" />

</RelativeLayout>